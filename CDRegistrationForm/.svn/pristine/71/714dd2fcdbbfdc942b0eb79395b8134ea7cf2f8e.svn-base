body {
	background:#fff;
}
.au-title {
	height:72px;font-size:18px;
	line-height:68px;padding-left:27px;color:#000;
}
.au-propaImgBox {
	padding:0 15px;margin-bottom:20px;
}
.au-imgBox {
	padding:6px;
	border:1px solid #f2f2f2;
	background:#fafafa;
}
.au-imgBox > img {
	width:100%;	
}
.au-txtBox {
	padding:0 15px;
}
.au-cn {
	font-size:14px;line-height:24px;
}
.au-en {
	font-size:12px;line-height:24px;padding-bottom:52px;
}
.au-cn,.au-en {
	word-wrap: break-word;
	word-break: break-all;
}
@media screen and (min-width:768px) {
  .widthControl {
    width:768px;margin:0 auto;
  }
}